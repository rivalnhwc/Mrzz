<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:gravity="center_horizontal"
    >
<RelativeLayout
    android:id="@+id/rl_index_recommend"
    android:layout_width="380dp"
    android:layout_height="210dp"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#0c000000"
        android:padding="1dp">
        <ImageView
            android:id="@+id/iv_index_recommend_main"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:src="@drawable/pic_index_1_6"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闺蜜纯色小清新连衣裙"
                android:textColor="@color/text_color"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:id="@+id/textView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥39.80"
                android:textSize="16dp"
                android:textColor="@color/pink"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:id="@+id/textView2" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_like"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_below="@+id/textView"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:layout_below="@+id/textView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:scrollbars="none"
    android:id="@+id/horizontalScrollView">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:orientation="horizontal"
                >
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/pic_index_1_5"
                android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/pic_index_1_4"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/pic_index_1_1"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/pic_index_1_2"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/pic_index_1_3"
                    android:adjustViewBounds="true"/>
                </LinearLayout>
</HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圆领合身版型，简约 的小圆领，百搭不挑人，穿起来露出优美的锁骨线条 很凸显优雅气质，短袖袖长，随意休闲，衣身拼色的设计，突显了 时尚风味，打造人群中的焦点，加入了休闲的牛仔面料"
                android:textColor="@color/text_color"
                android:textSize="12dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/horizontalScrollView" />
            </RelativeLayout>
        </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/tip_recommend"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_index_course"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="#0c000000"
        android:padding="1dp"
        android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_index_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_index_course_1"
                    android:adjustViewBounds="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美妆"
        android:textSize="16dp"
        android:textColor="#f0b19b"
        android:textStyle="bold"
        android:layout_below="@+id/iv_index_course"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:id="@+id/textView3" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【专题】拼美白 更要拼净白"
        android:textSize="16dp"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_gray"
            android:layout_below="@+id/textView4"
            android:layout_alignParentRight="true"
            android:id="@+id/textView5" />
        <ImageView
            android:id="@+id/iv_index_course_message"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_index_message"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toLeftOf="@+id/textView5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="413314"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_gray"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toLeftOf="@+id/iv_index_course_message"
            android:id="@+id/textView6" />
        <ImageView
            android:id="@+id/iv_index_course_eye"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_index_eye"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toLeftOf="@+id/textView6" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tip_course"/>
    </RelativeLayout>
</RelativeLayout>
