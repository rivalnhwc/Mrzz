<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/pink">

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginRight="@dimen/login_register_edit_margin"
            android:layout_marginLeft="@dimen/login_register_edit_margin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_reg_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/image_user_loginaty" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="#ff6a6a6a" />

            <EditText
                android:id="@+id/id_et_user_loginaty"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:background="@null"
                android:singleLine="true"
                android:hint="手机号/用户名/邮箱" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/login_register_edit_margin"
            android:layout_marginLeft="@dimen/login_register_edit_margin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_reg_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/image_password_loginaty" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="#ff6a6a6a" />

            <EditText
                android:id="@+id/id_et_password_loginaty"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:textColor="@color/black"
                android:singleLine="true"
                android:hint="密码" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_fogetpassword_loginaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="忘记密码？"
            android:textColor="@color/pink" />

        <Button
            android:id="@+id/tv_login_loginaty"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/btn_pink"
            android:layout_margin="@dimen/login_register_edit_margin"
            android:text="登陆"
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/tv_register_loginaty"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/btn_pink"
            android:layout_margin="@dimen/login_register_edit_margin"
            android:text="注册"
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="--------------------  快速登陆  --------------------"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/iv_weibo_loginaty"
                android:layout_gravity="center"
                android:src="@drawable/image_weibo_loginaty"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_qq_loginaty"
                android:layout_gravity="center"
                android:src="@drawable/image_qq_loginaty"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_weixin_loginaty"
                android:layout_gravity="center"
                android:src="@drawable/image_weixin_loginaty"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_taobao_loginaty"
                android:layout_gravity="center"
                android:src="@drawable/image_taobao_loginaty"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>